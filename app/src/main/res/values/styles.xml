<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="views">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="btn_layout">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/ab</item>
    </style>
    <style name="buttons">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:maxWidth">90dp</item>
    </style>
    <style name="operators">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/orange</item>
        <item name="backgroundTint">@color/darkgray</item>
        <item name="android:maxWidth">90dp</item>
    </style>
    <style name="clear">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/medyopinkk</item>
    </style>
</resources>